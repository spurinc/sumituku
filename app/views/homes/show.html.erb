<section id="mypage">

<div class="mypage_title mypage_link">
	<h2>マイページ</h2>
</div>


<div class="mypage_link prof_info_block">
	<div class="prof_block">
	<% if current_user.prof_img.file.nil? %>
		<%= image_tag ('Gravatar-icon.png') %>
	<% else %>
		<%= image_tag current_user.prof_img %>
	<% end %>
	</div>
	<div class="prof_block prof_info">
	<p><%= current_user.username %></p>
	<% if current_user.creator_buyer != nil %>
		<% if current_user.creator_buyer == "creator" %>
			<p>作り手</p>
		<% else %>
			<p>買い手</p>
		<% end %>
	<% end %>
	</div>
</div>

<div class="mypage_detail_block mypage_link">
	<div class="detail_link_block">
		<%= link_to "プロフィール編集", edit_user_registration_path %>
	</div>
	<div class="detail_link_block">
		<a href="">配送先住所</a>
	</div>
	<div class="detail_link_block">
		<a href="">支払い方法</a>
	</div>
	<div class="detail_link_block">
		<%= link_to 'カート一覧', homes_carts_path %>
	</div>
	<div class="detail_link_block">
		<%= link_to 'お気に入り', homes_favorites_path %>
	</div>
	<% if current_user.creator_buyer == "creator" %>
	<div class="detail_link_block">
		<%= link_to '出品一覧', homes_myproduct_path %>
	</div>
	<div class="detail_link_block">
		<%= link_to '出品する', new_furniture_path %>	
	</div>
	<% end %>
</div>

<div class="logout_block mypage_link">
	<%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "category_title" %>
	<!-- <a>ログアウト</a> -->
</div>
</section>